@model CAFE_MVC.Models.BAN

@{
    ViewBag.Title = "Xoá " + Model.TENBAN;
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}
@if (Session["ID_USER"] != null && Session["TYPE"].ToString() == "0")
{
    <div class="alert alert-danger text-lg-center">
        <h2 class="text-lg-center">XOÁ BÀN</h2>
    </div>
    <h3 class="text-center">Bạn có chắc muốn xoá <strong>@Model.TENBAN</strong> ? </h3>
    <div class="text-center">

        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên bàn: @Model.TENBAN
            </dt>



            <dt>
                Khu vực: @Model.KHUVUC.TENKV
            </dt>



        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xác nhập xoá" class="btn btn-danger" />
            </div>
            @Html.ActionLink("Back to List", "Index")
        }
    </div>
}
else
{
    <p>Chưa đăng nhập</p>
    @Html.ActionLink("Đăng nhập", "Login", "Dashboard")
}
