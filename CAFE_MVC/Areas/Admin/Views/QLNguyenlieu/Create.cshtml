@model CAFE_MVC.Models.NGUYENLIEU

@{
    ViewBag.Title = "Thêm nguyện liệu";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}
@if (Session["ID_USER"] != null && Session["TYPE"].ToString() == "0")
{
    <div class="alert alert-success text-center" role="alert">
        <h2>THÊM NGUYÊN LIỆU MỚI</h2>
    </div>
    
        using (Html.BeginForm())
        {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2"> <strong>Tên nguyên liệu</strong></label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TENNL, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TENNL, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2"> <strong>Số lượng</strong></label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SLTON, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SLTON, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
        }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}
else
{
    <p>Chưa đăng nhập</p>
    @Html.ActionLink("Đăng nhập", "Login", "Dashboard")
}
