@model CAFE_MVC.Models.NGUYENLIEU

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}


@if (Session["ID_USER"] != null && Session["TYPE"].ToString() == "0")
{

    <h2>Edit</h2>
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>NGUYENLIEU</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID_NL)

            <div class="form-group">
                <label class = "control-label col-md-2"> <strong>Tên nguyên liệu</strong></label> 
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TENNL, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TENNL, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2"> <strong>Số lượng</strong></label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SLTON, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SLTON, "Số lượng phải lớn hơn 0", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}
else
{
    <p>Chưa đăng nhập</p>
    @Html.ActionLink("Đăng nhập", "Login", "Dashboard")
}
