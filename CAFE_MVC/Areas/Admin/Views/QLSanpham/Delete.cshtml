@model CAFE_MVC.Models.SANPHAM

@{
    ViewBag.Title = "Xoá " + Model.TENSP;
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

@if (Session["ID_USER"] != null && Session["TYPE"].ToString() == "0")
{
    <div class="alert alert-danger text-lg-center">
        <h2 class="text-lg-center">XOÁ MÓN</h2>
    </div>
    <h3 class="text-center">BẠn có muốn xoá <strong>@Model.TENSP</strong> ?</h3>
    <div class="text-center">

        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên sản phẩm
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TENSP)
            </dd>

            <dt>
                Giá
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GIA)
            </dd>

            <dt>
                Danh mục
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DANHMUCSP.TENDM)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xác nhận xoá" class="btn btn-danger" />

            </div>
            <br />

        }
    </div>
    @Html.ActionLink("Quay lại", "Index")
}
else
{
    <p>Bạn chưa đăng nhập</p>
    @Html.ActionLink("Đăng nhập", "Login", "Dashboard")
}
