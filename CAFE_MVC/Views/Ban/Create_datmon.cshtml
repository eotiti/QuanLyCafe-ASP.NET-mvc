@model CAFE_MVC.Models.DATMON
@{
    ViewBag.Title = "Thêm món";
    Layout = "~/Views/Shared/layout_user.cshtml";
}
@if (Session["ID_USER"]!= null)
{

    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="alert alert-primary text-lg-center">
                <h4 class="text-lg-center">ĐẶT MÓN</h4>
            </div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class = "control-label col-md-2"><strong>Bàn</strong></label>
                <div class="col-md-10">
                    @Html.DropDownList("ID_BAN", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ID_BAN, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2"><strong>Món</strong></label>
                <div class="col-md-10">
                    @Html.DropDownList("ID_SP", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ID_SP, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group ">
                <label class="control-label col-md-2"><strong>Số lượng</strong></label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SOLUONG, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SOLUONG, "Số lượng không được âm", new { @class = "badge badge-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}
else
{
    <p>BẠN CHƯA ĐĂNG NHẬP</p>
    @Html.ActionLink("ĐĂNG NHẬP", "Login", "Home")
}