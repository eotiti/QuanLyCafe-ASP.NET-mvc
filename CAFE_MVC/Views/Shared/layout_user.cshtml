
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Public/dashboard/dashboard.css" rel="stylesheet" />
    <link href="~/Public/pagination/pagination.css" rel="stylesheet" />
    <script src="~/Public/dashboard/dashboard.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding:0px">
    <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
        @Html.ActionLink("QUẢN LÝ CAFE", "Index", "Home", null, htmlAttributes: new { @class = "navbar-brand col-md-3 col-lg-2 mr-0 px-3" })
        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-toggle="collapse" data-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <ul class="navbar-nav px-3">
            @if (Session["ID_USER"] == null)
            {
                <li class="nav-item text-nowrap">
                    @Html.ActionLink("ĐĂNG NHẬP", "Login", "Home", null, htmlAttributes: new { @class = "nav-link" })
                </li>
            }
            else
            {

            }

        </ul>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse ">
                <div class="sidebar-sticky pt-3 ">
                    <ul class="nav flex-column">
                        @if (Session["ID_USER"] != null)
                        {
                            if (Session["TYPE"].ToString() == "0")
                            {
                                <li class="nav-item badge-info">
                                    <p class="nav-link active text-light ">
                                        Xin chào: @Session["FULLNAME"]
                                    </p>
                                </li>
                                <li class="nav-item align-bottom badge-info">
                                    <strong>@Html.ActionLink("Đổi mật khẩu", "Edit", "Taikhoan", new { id = Session["ID_USER"] }, htmlAttributes: new { @class = "nav-link active text-dark" })</strong>
                                </li>
                                <li><br /></li>

                                <li class="nav-item align-bottom badge-danger">
                                    @Html.ActionLink("TRANG QUẢN TRỊ", "Index", "Dashboard", new { Area = "Admin" }, htmlAttributes: new { @class = "nav-link active text-warning" })
                                </li>

                            }
                            else
                            {
                                <li class="nav-item badge-info">
                                    <p class="nav-link active text-light">
                                        Xin chào: @Session["FULLNAME"]
                                    </p>
                                </li>
                                <li class="nav-item align-bottom badge-info">
                                    @Html.ActionLink("Đổi mật khẩu", "Edit", "Taikhoan", new { id=Session["ID_USER"]}, htmlAttributes: new { @class = "nav-link active text-light" })
                                </li>
                            }

                            <li><br /></li>
                            <li class="nav-item badge-secondary">
                                @Html.ActionLink("Khu vực", "Index", "Khuvuc", null, htmlAttributes: new { @class = "nav-link active text-light" })
                            </li>

                            <li class="nav-item badge-secondary">
                                @Html.ActionLink("Danh sách bàn", "Index", "Ban", null, htmlAttributes: new { @class = "nav-link active text-light" })
                            </li>

                            <li class="nav-item badge-secondary">
                                @Html.ActionLink("Menu", "Index", "Sanpham", null, htmlAttributes: new { @class = "nav-link active text-light" })
                            </li>

                            <li class="nav-item badge-secondary">
                                @Html.ActionLink("Danh mục", "Index", "Danhmuc", null, htmlAttributes: new { @class = "nav-link active text-light" })
                            </li>

                            <li class="nav-item badge-secondary">
                                @Html.ActionLink("Lịch sử thanh toán", "Index", "Lichsu", null, htmlAttributes: new { @class = "nav-link active text-light" })
                            </li>
                            <li><br /></li>

                            <li class="nav-item d-inline-flex ">
                                @Html.ActionLink("ĐĂNG XUẤT", "Logout", "Home", null, htmlAttributes: new { @class = "nav-link active bg-light text-danger" })
                            </li>
                        }
                    </ul>
                </div>
            </nav>
            <!--MAIN-->
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4" style="background-color:lightgray">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2"></h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <div class="btn-group mr-2">
                        </div>
                    </div>
                </div>
                <!--===CONTENT===-->
                @RenderBody()
                <!--==============-->
            </main>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
