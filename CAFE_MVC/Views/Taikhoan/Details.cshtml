@model CAFE_MVC.Models.TAIKHOAN

@{
    ViewBag.Title = "Thông tin cá nhân";
    Layout = "~/Views/Shared/layout_user.cshtml";
}

@if (Session["ID_USER"] != null)
{
    <div class="alert alert-primary text-lg-center">
        <h2 class="text-lg-center">THÔNG TIN CÁ NHÂN</h2>
    </div>
    <hr />
    <div class="container-sm col-7">
        <form class="bg-light">
            <div class="form-group row border-info">
                <label for="staticEmail" class="col-sm-2 col-form-label text-lg-center badge-info"><strong>HỌ VÀ TÊN</strong></label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext text-lg-center" id="staticEmail" value="@Model.FULLNAME">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label text-lg-center bg-info"><strong>USERNAME</strong></label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext text-lg-center" id="staticEmail" value="@Model.USERNAME">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label text-lg-center bg-info"><strong>CHỨC VỤ</strong></label>
                <div class="col-sm-10">
                    @if (Model.TYPE.ToString() == "0")
                    {
                        <input type="text" readonly class="form-control-plaintext text-lg-center" id="staticEmail" value="Admin">
                    }
                    else
                    {
                        <input type="text" readonly class="form-control-plaintext text-lg-center" id="staticEmail" value="Nhân viên">
                    }
                </div>
            </div>
        </form>
    </div>
    <p>
        @Html.ActionLink("Đổi mật khẩu", "Edit", new { id = Model.ID_TK },htmlAttributes:new {@class="btn btn-warning"})

    </p>
    <p>
        @Html.ActionLink("Trang chủ", "Index", "Home")
    </p>
}
else
{
    <p>BẠN CHƯA ĐĂNG NHẬP</p>
    @Html.ActionLink("Đăng nhập", "Login", "Home")
}